#
# Enviroment Actions
#

# Reload/Quit BSPWM
super + ctrl + {b,q}
    bspc {wm -r,quit}

# Reload SXHKD's Config Files
super + ctrl + s
    pkill -USR1 -x sxhkd

# View Keybindings
super + ctrl + h
    ~/.config/sxhkd/sxhkd-help

#
# BSPWM Window Management
#

# Rotate Node's Focus
super + {q,e}
    bspc node -f '{prev,next}.local.!hidden.window'

# Rotate Window Order
super + shift + {q,e}
    bspc node @/ -C {forward,backward}

# Set Window's State
super + shift + {t,f,r}
    bspc node -t {tiled,floating,fullscreen}

# Send Window in Given Direction
super + shift + {w,a,s,d}
    bspc node -s {north,west,south,east}

# Swap Current Node with Largest Window
super + shift + l
    bspc node -s biggest.window

# Switch/Send Window to Different Desktop
super + {_,shift +} {1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# Resize Window
super + {Left,Down,Up,Right}
    STEP=175; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

# Move Floating Window
super + shift + {Left,Down,Up,Right}
    bspc node -v {-250 0,0 250,0 -250,250 0}

# Close/Kill Window (follows clients's closing procedure using ewmh or destroys it using xcb_kill_client)
super + shift + {j,k}
    bspc node -{c,k}

#
# Application Launcher
#

# Program Launcher
super + Return
    rofi -show run

# Terminal Emulator
super + space
    kitty

# Firefox
super + f
    firefox
